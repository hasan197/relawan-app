# Application Version (Vite)
VITE_APP_VERSION=1.0.0
VITE_APP_BUILD_DATE=2025-11-30T15:45:00+07:00

# Backend Configuration
# Options: 'supabase' or 'convex'
VITE_BACKEND_PROVIDER=convex

# Convex Configuration
VITE_CONVEX_URL=https://your-project-name.convex.cloud

# Backblaze B2 Configuration (for Convex backend)
# Get these from your Backblaze B2 account - Master Keys
B2_APPLICATION_KEY_ID=your_b2_application_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your-bucket-name

# Supabase Configuration (for Supabase backend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Development Environment Variables (for Supabase Functions)
# These are used in the Supabase Edge Functions
PROTECTION_KEY=your_protection_key_here
ADMIN_PASSWORD=your_admin_password_here
PEMBIMBING_PASSWORD=your_pembimbing_password_here
RELAWAN_PASSWORD=your_relawan_password_here

# Feature Flags
VITE_ENABLE_NEW_FEATURE=false
VITE_ENABLE_DEBUG_MODE=false
